<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:paddingLeft="9.5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/comm_arrow_left"
            android:id="@+id/backIV"/>

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="21dp"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            android:text="@string/cash"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/comm_profile_pic"/>

                <LinearLayout
                    android:layout_marginLeft="17dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="#333333"
                            android:text="@string/starball"/>

                        <TextView
                            android:id="@+id/myStarballTV"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="#333333"
                            android:text="0"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/historyTV"
                        android:layout_marginTop="20dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:background="@drawable/background_border_strock3_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="#333333"
                        android:text="@string/starball_history"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1f1f1f"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#333333"
                    android:text="@string/cash_starball"/>

                <TextView
                    android:id="@+id/cashStarballTV"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#333333"
                    android:text="0"/>

            </LinearLayout>


            <TextView
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#555555"
                android:letterSpacing="-0.03"
                android:text="@string/cash_content"/>

            <TextView
                android:layout_marginTop="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#555555"
                android:textStyle="bold"
                android:text="@string/cash_request_amount"/>

            <EditText
                android:id="@+id/cashStarballET"
                android:inputType="number"
                android:layout_marginTop="9.5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/ex_input"
                android:textColorHint="#bbbbbb"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="14dp"
                android:background="@drawable/background_border_strock1"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="14.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#555555"
                android:text="@string/prediction_cash"/>

            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cashTV"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19.5dp"
                    android:textColor="#000000"
                    android:gravity="end"
                    android:padding="3dp"
                    android:text="$ 0"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#555555"
                android:letterSpacing="-0.03"
                android:text="@string/cash_content2"/>

            <TextView
                android:layout_marginTop="13.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#555555"
                android:text="@string/cash_content3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#555555"
                android:text="@string/cash_content4"/>

            <TextView
                android:layout_marginTop="22.5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#555555"
                android:text="@string/deposit_request"/>

            <EditText
                android:id="@+id/emailET"
                android:layout_marginTop="9.5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/ex_input"
                android:textColorHint="#bbbbbb"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="14dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/background_border_strock1"/>

            <TextView
                android:layout_marginTop="34dp"
                android:id="@+id/nextTV"
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#000000"
                android:text="요청합니다"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20.5dp"
                android:textColor="#ffffff"/>


        </LinearLayout>

    </ScrollView>
</LinearLayout>