<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">

    <com.devstories.starball_android.base.RationalRelativeLayout
            android:id="@+id/popup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/background_round_ffffff"
            android:orientation="vertical"
            app:ratio="330:450">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/background_gradient_lack"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                    android:paddingTop="34.5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="#ffffff"
                    android:text="Starball이 부족합니다."
                    />
            <TextView
                    android:visibility="gone"
                    android:paddingTop="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:text="Geex Arts님을 놓치지 싫으시면\n
스타볼을 이용하세요"
                    />

            <TextView
                    android:paddingTop="13dp"
                    android:paddingBottom="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:text="8:50분 남음"
                    />



        </LinearLayout>



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:paddingTop="41dp"
                        android:paddingBottom="11.5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_marginRight="7.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/main_starball"/>
                    <TextView

                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="19dp"
                            android:textColor="#1f1f1f"
                            android:gravity="center_horizontal"
                            android:text="2 Starball"
                            />

                </LinearLayout>


                <TextView
                        android:layout_marginBottom="20.5dp"
                        android:layout_width="125dp"
                        android:layout_height="40dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/background_border_strock7ffffff"
                        android:textColor="#555555"
                        android:gravity="center"
                        android:text="4,000원"
                        />




            </LinearLayout>
            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#1f1f1f"/>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                        android:paddingTop="11dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/mark_pppular"/>


                <LinearLayout
                        android:paddingTop="12dp"
                        android:paddingBottom="11.5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_marginRight="7.5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/main_starball"/>
                    <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="19dp"
                            android:textColor="#1f1f1f"
                            android:gravity="center_horizontal"
                            android:text="20 Starball"
                            />

                </LinearLayout>


                <TextView
                        android:layout_marginBottom="20.5dp"
                        android:layout_width="125dp"
                        android:layout_height="40dp"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:background="@drawable/background_border_strock7ffffff"
                        android:textColor="#555555"

                        android:gravity="center"
                        android:text="40,000원"
                        />

            </LinearLayout>


        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1f1f1f"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="54dp">

            <TextView
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#333333"
                    android:text="무료로 +1 Starball 받기"
                    />
            <TextView
                    android:layout_marginRight="20dp"
                    android:layout_width="0dp"
                    android:layout_height="23.5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/background_border_strock5"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textColor="#5c5c5c"
                    android:text="친구초대"/>

        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1f1f1f"/>
        <TextView
                android:textStyle="bold"
                android:paddingTop="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21dp"
                android:textColor="#282828"
                android:gravity="center_horizontal"
                android:text="24시간 무제한 ‘좋아요’"
                />
        <TextView
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#ff0000"
                android:gravity="center"
                android:text="Booster Mode"
                />
        <TextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20.5dp"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:background="@drawable/background_border_strock7ffffff"
                android:textColor="#555555"
                android:gravity="center"
                android:text="9,900원"
                />

        </LinearLayout>


    </com.devstories.starball_android.base.RationalRelativeLayout>
    
    
    
</LinearLayout>


