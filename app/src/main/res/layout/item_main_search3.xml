<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ImageView
		android:id="@+id/imgIV"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"/>

	<com.google.android.exoplayer2.ui.PlayerView
		android:id="@+id/videoVV"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_centerHorizontal="true"
		app:resize_mode="zoom"
		app:use_controller="false"/>

	<LinearLayout
		android:id="@+id/infoLL"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginLeft="19.5dp"
		android:layout_marginBottom="35dp"
		android:layout_alignParentBottom="true"
		android:visibility="gone">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:layout_marginRight="1.25dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/mark_here"/>

			<ImageView
				android:id="@+id/safeIV"
				android:layout_marginLeft="1.25dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/mark_safe"/>


		</LinearLayout>


		<TextView
			android:paddingTop="15dp"
			android:paddingBottom="5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:shadowColor="#99040000"
			android:shadowRadius="3"
			android:textSize="14dp"
			android:textColor="#ffffff"
			android:text="Korea,   1,200Km"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/infoIV"
				android:paddingRight="7.5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/main_info"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:shadowColor="#99040000"
				android:shadowRadius="3"
				android:textStyle="bold"
				android:textSize="21dp"
				android:textColor="#ffffff"
				android:text="Alex   28"
				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:shadowColor="#99040000"
				android:shadowRadius="3"
				android:textStyle="bold"
				android:textSize="14dp"
				android:textColor="#ffffff"
				android:text="  78%"
				/>


		</LinearLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:gravity="center_vertical"
			android:layout_height="wrap_content">


			<HorizontalScrollView
				android:layout_marginTop="15dp"
				android:layout_width="match_parent"
				android:layout_height="33.5dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<ImageView
						android:layout_width="45dp"
						android:layout_marginRight="5dp"
						android:layout_height="match_parent"
						android:src="@mipmap/picoe"/>

					<ImageView
						android:layout_width="45dp"
						android:layout_marginRight="5dp"
						android:layout_height="match_parent"
						android:src="@mipmap/pic_3"/>

					<ImageView
						android:layout_width="45dp"
						android:layout_marginRight="5dp"
						android:layout_height="match_parent"
						android:src="@mipmap/pic_4"/>

					<ImageView
						android:layout_width="45dp"
						android:layout_marginRight="5dp"
						android:layout_height="match_parent"
						android:src="@mipmap/picoe"/>

					<ImageView
						android:layout_width="45dp"
						android:layout_marginRight="5dp"
						android:layout_height="match_parent"
						android:src="@mipmap/pic_3"/>

					<ImageView
						android:layout_width="45dp"
						android:layout_marginRight="5dp"
						android:layout_height="match_parent"
						android:src="@mipmap/pic_4"/>

				</LinearLayout>


			</HorizontalScrollView>

			<ImageView
				android:paddingTop="15dp"
				android:layout_marginRight="20dp"
				android:layout_alignParentRight="true"
				android:layout_centerInParent="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:src="@mipmap/main_thumnail_more"/>


		</RelativeLayout>

		<RatingBar
			android:layout_marginTop="15dp"
			style="@style/Base.Widget.AppCompat.RatingBar"
			android:numStars="5"
			android:max="5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>
	</LinearLayout>


	<ImageView
		android:id="@+id/charmIV"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@mipmap/profile_pre_super_like"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginRight="9.5dp"
		android:layout_marginBottom="150dp"/>


</RelativeLayout>