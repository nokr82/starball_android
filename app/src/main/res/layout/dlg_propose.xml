<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.devstories.starball_android.base.RationalRelativeLayout
        android:id="@+id/popup"
        android:background="@drawable/background_round_ffffff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:ratio="330:400">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/proposeMemberIV"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/comm_profile_pic"/>

            <TextView
                android:layout_marginTop="18.5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#555555"
                android:gravity="center_horizontal"
                android:text="@string/dlg_prose_title"/>

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#013e92"
                android:gravity="center_horizontal"
                android:text="@string/dlg_prose_ok"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#555555"
                android:text="@string/dlg_prose_content"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#555555"
                android:text="@string/dlg_prose_content2"/>

            <TextView
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="61dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="@drawable/background_border_strock4"
                android:gravity="center"
                android:text="@string/dlg_prose_yes"/>

            <TextView
                android:id="@+id/noTV"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="#333333"
                android:text="@string/safe_join_no"/>

        </LinearLayout>

    </com.devstories.starball_android.base.RationalRelativeLayout>

</LinearLayout>


