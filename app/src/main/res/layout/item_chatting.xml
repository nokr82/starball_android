<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">


            <ImageView
                    android:paddingLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/comm_profile_pic"/>




        <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:background="@drawable/background_border_strock7ffffff"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:text="God bless you and I got It\n
go now"
                    />
            <TextView
                    android:paddingTop="20dp"
                    android:paddingLeft="90dp"
                   android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:textColor="#666666"
                    android:text=" 08/25 03:45 PM"
                    />
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/loveIV"
                android:layout_marginLeft="5dp"
                android:background="@drawable/circle_backgroundgroup"
                android:layout_width="30dp"
                android:gravity="center"
                android:layout_height="30dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lounge_heart_like"/>


        </LinearLayout>











    </LinearLayout>


    <RelativeLayout
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginTop="3.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="16dp"
                android:textColor="#000000"
                android:background="@drawable/background_border_strock10_profile"
                android:text="나와 취미가 같아 님에게 관심이 \n
갑니다."
                />
    </RelativeLayout>




    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical|right"
            android:layout_height="wrap_content">







        <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="23.5dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/background_border_strock4_a24dc6"
                    android:text="With little more than a hello, I began to reread the letter that was in my hand."
                    />

            <TextView
                    android:paddingTop="45dp"
                    android:paddingRight="40dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:textColor="#ffffff"
                    android:text=" 08/25 03:45 PM"
                    />

        </RelativeLayout>













    </LinearLayout>

</LinearLayout>

</LinearLayout>