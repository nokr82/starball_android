<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">




    <LinearLayout
            android:id="@+id/ckLL"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">


        <ImageView
                android:id="@+id/closeIV"
                android:paddingRight="20dp"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/setting_character_closed"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >
            <View
                    android:id="@+id/heightV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1.5dp"
                    android:background="#a862b2"/>
            <View
                    android:id="@+id/regionV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1.5dp"
                    android:background="#c9c9c9"/>
            <View
                    android:id="@+id/policyV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1.5dp"
                    android:background="#c9c9c9"/>
            <View
                    android:id="@+id/babyV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1.5dp"
                    android:background="#c9c9c9"/>

            <View
                    android:id="@+id/animalV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1.5dp"
                    android:background="#c9c9c9"/>
            <View
                    android:id="@+id/smokeV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1.5dp"
                    android:background="#c9c9c9"/>
            <View
                    android:id="@+id/drinkV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1.5dp"
                    android:background="#c9c9c9"/>
            <View
                    android:id="@+id/healthV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1.5dp"
                    android:background="#c9c9c9"/>
            <View
                    android:id="@+id/sportV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1.5dp"
                    android:background="#c9c9c9"/>
            <View
                    android:id="@+id/workV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1.5dp"
                    android:background="#c9c9c9"/>




        </LinearLayout>

        <ImageView
                android:id="@+id/profileIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/setting_profile_picture"/>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/charmFL"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </FrameLayout>




</LinearLayout>