<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
                android:id="@+id/adverLL"
                android:layout_marginRight="25dp"
                android:background="@drawable/background_gradient3"
                android:layout_width="200dp"
                android:layout_height="230dp"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/adverIV"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/setting_vvip_icon_01"/>

            <TextView
                    android:id="@+id/adverTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center_horizontal"
                    android:text="@string/vvip_adver_del"
                    />
            <TextView
                    android:id="@+id/adversubTV"
                    android:paddingTop="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center_horizontal"
                    android:text="@string/vvip_join_content"
                    />
        </LinearLayout>
</LinearLayout>