<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/addelLL"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

        <ImageView
                android:id="@+id/adverIV"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/setting_ad_icon_01"/>

        <TextView
                android:id="@+id/adverTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="@string/setting_main_adver_del"
                />
        <TextView
                android:id="@+id/adversubTV"
                android:paddingTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="@string/setting_main_adver_content"
                />



    </LinearLayout>
    </LinearLayout>

