<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <ImageView
                android:paddingLeft="9.5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/comm_arrow_left"
                android:id="@+id/backIV"/>

        <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="21dp"
                android:textColor="#333333"
                android:layout_centerInParent="true"
                android:text="@string/phone_certi_title"/>

    </RelativeLayout>

    <TextView
            android:layout_marginTop="23dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#333333"
            android:text="@string/phone_certi_content"
            />


    <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/background_border_strock1"
            android:layout_height="35dp">

        <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#333333"
                android:gravity="center_horizontal"
                android:text="+82"
                />

        <EditText
                android:background="@null"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:inputType="number"
                android:layout_height="match_parent"
                />


    </LinearLayout>

    <TextView
            android:id="@+id/okTV"
            android:layout_marginTop="114.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:background="@drawable/background_border_strock10_d4d4d4"
            android:textColor="#333333"
            android:gravity="center"
            android:text="@string/phone_certi_input"
            />

    <TextView
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="#333333"
            android:text="@string/phone_certi_content2"
            />


</LinearLayout>