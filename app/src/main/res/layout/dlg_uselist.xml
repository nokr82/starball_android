<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">
    <com.devstories.starball_android.base.RationalRelativeLayout
            android:id="@+id/popup"
            android:background="@drawable/background_border_strock8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:ratio="330:336.5">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
<RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="46.5dp">
        <TextView
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#333333"
                android:text="이용 내역"
                />

    <TextView
            android:layout_marginRight="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="14.5dp"
            android:paddingRight="14.5dp"
            android:background="@drawable/background_border_strock3f8f8f8"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#5c5c5c"
            android:gravity="center_horizontal"
            android:text="Cash 신청"
            />



</RelativeLayout>

        <View
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1f1f1f"/>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1f1f1f"/>
        <LinearLayout
                android:background="#f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:textStyle="bold"
                    android:padding="9dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:gravity="center_horizontal"
                    android:text="날짜"
                    />
            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#1f1f1f"/>

            <TextView
                    android:textStyle="bold"
                    android:padding="9dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:gravity="center_horizontal"
                    android:text="내역"
                    />
            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#1f1f1f"/>
            <TextView
                    android:textStyle="bold"
                    android:padding="9dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:gravity="center_horizontal"
                    android:text="변화"
                    />
            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#1f1f1f"/>
            <TextView
                    android:textStyle="bold"
                    android:padding="9dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:gravity="center_horizontal"
                    android:text="누계"
                    />



        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1f1f1f"/>
        <LinearLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:padding="9dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:gravity="center_horizontal"
                    android:text="10/22"
                    />
            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#1f1f1f"/>

            <TextView
                    android:padding="9dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:gravity="center_horizontal"
                    android:text="구매"
                    />
            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#1f1f1f"/>
            <TextView
                    android:padding="9dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:gravity="center_horizontal"
                    android:text="+5"
                    />
            <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#1f1f1f"/>
            <TextView
                    android:padding="9dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:gravity="center_horizontal"
                    android:text="5"
                    />



        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#1f1f1f"/>
        </LinearLayout>
</ScrollView>
        <RelativeLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


        <TextView
                android:id="@+id/closeTV"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:textColor="#545454"
                android:background="@drawable/background_border_strock2"
                android:gravity="center"
                android:text="닫기"
                />
        <TextView
                android:id="@+id/payTV"
                android:layout_marginRight="15dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:background="#923b9f"
                android:gravity="center"
                android:text="Starball  구매하기"
                />

        </RelativeLayout>
        </LinearLayout>

    </com.devstories.starball_android.base.RationalRelativeLayout>
    
    

    
    
</LinearLayout>


