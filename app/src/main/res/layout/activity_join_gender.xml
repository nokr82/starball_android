<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

    <TextView
            android:textStyle="bold"
            android:layout_marginTop="66dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#333333"
            android:text="당신의 성별은,"
    />

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="70dp">
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
        android:layout_weight="1"
                  android:gravity="center"
                  android:textSize="18sp"
                  android:textColor="#555555"
                  android:textStyle="bold"
                  android:text="남자"
        android:background="@drawable/background_gender_strock2"/>

        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:textSize="18dp"
                  android:textColor="#ffffff"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:text="여자"
                  android:background="@drawable/background_gender_strock1"/>
    </LinearLayout>

<TextView android:layout_width="wrap_content" android:layout_height="0dp"
android:layout_weight="1"/>

    <TextView
            android:id="@+id/nextTV"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
              android:layout_height="50dp"
                 android:background="#000000"
              android:text="다음"
            android:textStyle="bold"
              android:gravity="center"
              android:textSize="20.5sp"
              android:textColor="#ffffff"/>




</LinearLayout>