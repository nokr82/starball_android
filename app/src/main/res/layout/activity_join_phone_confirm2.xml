<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/comm_arrow_left"
                android:id="@+id/backIV"/>

        <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="21dp"
                android:textColor="#333333"
                android:layout_centerInParent="true"
                android:text="@string/phone_confirm_title"/>

    </RelativeLayout>


    <TextView
            android:layout_marginTop="23dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#333333"
            android:letterSpacing="-0.03"
            android:gravity="center"
            android:text="수신된 인증번호 4자리 숫자를 입력해 주세요"
            />


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_marginLeft="95dp"
    android:layout_marginRight="95dp"
    android:layout_marginTop="70dp">

        <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                  android:textSize="24dp"
                  android:textColor="#9b9ca0"
                  android:gravity="center"
                  android:layout_marginRight="10dp"
                  android:text="1"
                  android:background="@drawable/background_border_strock3"
        />
        <EditText android:layout_width="0dp"
                  android:inputType="number"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:textSize="24dp"
                  android:textColor="#9b9ca0"
                  android:gravity="center"
                  android:background="@drawable/background_border_strock3"
                 />
        <EditText android:layout_width="0dp"
                  android:inputType="number"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:textSize="24dp"
                  android:textColor="#9b9ca0"
                  android:layout_marginLeft="10dp"
                  android:gravity="center"
                  android:background="@drawable/background_border_strock3"
                />
        <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:textSize="24dp"
                android:textColor="#9b9ca0"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text=""
                android:background="@drawable/background_border_strock3"
                />

    </LinearLayout>

    <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#333333"
            android:text="@string/phone_confirm_content"
            />
    <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#000000"
            android:text="@string/push_link"
            />

    <TextView
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#333333"
            android:letterSpacing="-0.03"
            android:text="@string/phone_certi_no_share"
            />


    <TextView android:layout_width="wrap_content" android:layout_height="0dp"
android:layout_weight="1"/>

    <TextView
            android:id="@+id/nextTV"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
              android:layout_height="50dp"
                 android:background="#000000"
            android:text="@string/check"
            android:textStyle="bold"
              android:gravity="center"
              android:textSize="20.5dp"
              android:textColor="#ffffff"/>




</LinearLayout>