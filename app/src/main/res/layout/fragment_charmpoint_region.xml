<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/setting_character_icon_02"/>

    <TextView
        android:textStyle="bold"
        android:paddingTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#a862b2"
        android:layout_gravity="center"
        android:text="당신의 종교는,"/>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/region1TV"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#333333"
                android:background="@drawable/background_border_strock_c9c9c9"
                android:layout_gravity="center"
                android:text="불교"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/region2TV"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#333333"
                android:background="@drawable/background_border_strock_c9c9c9"
                android:layout_gravity="center"
                android:text="기독교"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/region3TV"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#333333"
                android:background="@drawable/background_border_strock_c9c9c9"
                android:layout_gravity="center"
                android:text="카톨릭"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/region4TV"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#333333"
                android:background="@drawable/background_border_strock_c9c9c9"
                android:layout_gravity="center"
                android:text="힌두교"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/region5TV"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#333333"
                android:background="@drawable/background_border_strock_c9c9c9"
                android:layout_gravity="center"
                android:text="자이나교"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/region6TV"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#333333"
                android:background="@drawable/background_border_strock_c9c9c9"
                android:layout_gravity="center"
                android:text="유대교"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/region7TV"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#333333"
                android:background="@drawable/background_border_strock_c9c9c9"
                android:layout_gravity="center"
                android:text="이슬람교"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/region8TV"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#333333"
                android:background="@drawable/background_border_strock_c9c9c9"
                android:layout_gravity="center"
                android:text="시크교"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/region9TV"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#333333"
                android:background="@drawable/background_border_strock_c9c9c9"
                android:layout_gravity="center"
                android:text="기타"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/region10TV"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#333333"
                android:background="@drawable/background_border_strock_c9c9c9"
                android:layout_gravity="center"
                android:text="믿음은 있지만 종교없음"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/region11TV"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#333333"
                android:background="@drawable/background_border_strock_c9c9c9"
                android:layout_gravity="center"
                android:text="아무것도 믿지않음"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/skipTV"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#888888"
                android:gravity="center_horizontal"
                android:text="건너뛰기"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>