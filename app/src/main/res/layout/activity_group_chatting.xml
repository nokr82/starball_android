<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp">

        <ImageView
                android:paddingRight="10dp"
                android:paddingLeft="9.5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/comm_arrow_left"
                android:id="@+id/backIV"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#333333"
                android:text="인도네시아 친구"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#c8c8c8"
                android:text="6"
                />

        <ImageView
                android:paddingLeft="9.5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/global"
              />
        <ImageView
                android:id="@+id/reportIV"
                android:paddingRight="10dp"
                android:paddingLeft="9.5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/siren"
         />

    </LinearLayout>


    <ListView
            android:id="@+id/groupLV"
            android:divider="@null"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


    </ListView>


    <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp">

        <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:background="@drawable/background_border_strock10_000000">

            <ImageView
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/profile_plus"/>




        </LinearLayout>

        <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/chatting_mic"/>

        <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/chatting_camera"/>
<RelativeLayout
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:background="@drawable/background_border_strock13"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColorHint="#bbbbbb"
                android:paddingLeft="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:textSize="14sp"
               />

        <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:background="@drawable/circle_background4">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/paper_op"/>





        </LinearLayout>



</RelativeLayout>

        <ImageView
                android:id="@+id/starballIV"
                android:layout_marginRight="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/bi"/>


    </LinearLayout>


</LinearLayout>