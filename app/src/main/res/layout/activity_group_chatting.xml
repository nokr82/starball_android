<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp">

        <ImageView
                android:paddingRight="10dp"
                android:paddingLeft="9.5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/comm_arrow_left"
                android:id="@+id/backIV"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#333333"
                android:text="인도네시아 친구"
                />

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#c8c8c8"
                android:text="6"
                />

        <ImageView
                android:id="@+id/globalIV"
                android:paddingLeft="9.5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/global"
              />
        <ImageView
                android:id="@+id/reportIV"
                android:paddingRight="10dp"
                android:paddingLeft="9.5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/siren"
         />

    </LinearLayout>

    <LinearLayout
            android:background="#f8f8f8"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="vertical">

        <TextView
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#333333"
                android:text="참여자"
                />


        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_alignParentTop="true"
                    android:paddingLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/comm_profile_pic"/>

            <ImageView
                    android:paddingTop="25dp"
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/profile_pic_bg_del"/>
            <TextView
                    android:layout_marginLeft="17dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#333333"
                    android:text="Sabdo"
                    />


        </RelativeLayout>


        </HorizontalScrollView>



    </LinearLayout>





    <ListView
            android:id="@+id/groupLV"
            android:divider="@null"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


    </ListView>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1f1f1f"/>
    <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp">

        <LinearLayout
                android:id="@+id/plusLL"
                android:layout_marginLeft="10dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:background="@drawable/background_border_strock10_000000">

            <ImageView
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/profile_plus"/>




        </LinearLayout>

        <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/chatting_mic"/>

        <ImageView
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/chatting_camera"/>
<RelativeLayout
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:background="@drawable/background_border_strock13"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColorHint="#bbbbbb"
                android:paddingLeft="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:textSize="14dp"
               />

        <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:background="@drawable/circle_background4">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/paper_op"/>





        </LinearLayout>



</RelativeLayout>

        <ImageView
                android:id="@+id/starballIV"
                android:layout_marginRight="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/bi"/>


    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1f1f1f"/>
    <LinearLayout
            android:visibility="gone"
            android:id="@+id/emoLL"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp">

        <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/emoticon"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#333333"
                    android:gravity="center_horizontal"
                    android:text="이모티콘"
                    />




       </LinearLayout>

        <LinearLayout

                android:layout_marginLeft="30dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                >

            <ImageView
                    android:id="@+id/languageIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bubble"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#333333"
                    android:gravity="center_horizontal"
                    android:text="상용어구"
                    />




        </LinearLayout>



    </LinearLayout>

    <LinearLayout
            android:id="@+id/languageLL"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_border_strock10_ededed"
            android:orientation="vertical">

        <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lounge_picture_add"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"/>


        <TextView

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:textColor="#666666"
                android:text="상용어구를 등록하세요"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="14dp"
                />

    </RelativeLayout>


    <LinearLayout
            android:layout_marginTop="12.5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="11dp"
                        android:textColor="#ffff"
                        android:background="@drawable/background_border_strock4_923b9f"
                        android:text="Good Night"
                        />


            </RelativeLayout>
        <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="11dp"
                    android:textColor="#ffff"
                    android:background="@drawable/background_border_strock4_923b9f"
                    android:text="Good Night"
                    />


        </RelativeLayout>
        <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="11dp"
                    android:textColor="#ffff"
                    android:background="@drawable/background_border_strock4_923b9f"
                    android:text="Good Night"
                    />


        </RelativeLayout>
        <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="11dp"
                    android:textColor="#ffff"
                    android:background="@drawable/background_border_strock4_923b9f"
                    android:text="Good Night"
                    />


        </RelativeLayout>


    </LinearLayout>
    </LinearLayout>


</LinearLayout>