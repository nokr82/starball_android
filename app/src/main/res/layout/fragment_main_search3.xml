<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgIV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/videoVV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        app:resize_mode="zoom"
        app:use_controller="false"/>

    <LinearLayout
        android:id="@+id/infoLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="19.5dp"
        android:layout_marginEnd="19.5dp"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/hereIV"
                android:layout_marginRight="1.25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mark_here"/>

            <ImageView
                android:id="@+id/safeIV"
                android:layout_marginLeft="1.25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mark_safe"/>

        </LinearLayout>

        <TextView
            android:id="@+id/distanceTV"
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#99040000"
            android:shadowRadius="3"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:text="Korea,   1,200Km"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/infoIV"
                android:paddingRight="7.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_info"/>

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#99040000"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:textSize="21dp"
                android:textColor="#ffffff"
                android:text="Alex"/>

            <TextView
                android:id="@+id/ageTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#99040000"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:textSize="21dp"
                android:textColor="#ffffff"
                android:text="28"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/fitRateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#99040000"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:text="78%"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dailyLL"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="33.5dp">




            </LinearLayout>

            <ImageView
                android:paddingTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/main_thumnail_more"/>

        </LinearLayout>

        <com.fuzzproductions.ratingbar.RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:minAllowedStars="1"
            app:numStars="5"
            app:starSize="50dp"
            app:starSpacing="7dp"
            app:rating="0"
            app:isIndicator="false"
            app:emptyDrawable="@mipmap/star_empty"
            app:filledDrawable="@drawable/icn_rating_star_green"
            app:stepSize="0.5"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/charmIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/profile_pre_super_like"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="9.5dp"
        android:layout_marginBottom="150dp"/>

    <ImageView
        android:id="@+id/passIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43.5dp"
        android:alpha="0.0"/>

    <ImageView
        android:id="@+id/likeIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/like"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="53dp"
        android:alpha="0.0"/>

</RelativeLayout>