<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/itemLL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/translationLL"
        android:visibility="gone"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical|right"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9dp"
                android:textColor="#333333"
                android:gravity="end"
                android:text="5 / 6"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:textColor="#333333"
                android:gravity="end"
                android:text="08/29 2:35 PM"
                />

        </LinearLayout>


        <RelativeLayout

            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/translationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="16dp"
                android:textColor="#000000"
                android:background="@drawable/background_border_strock7ffffff"
                android:text="this is so dope. love messaging concepts!."
                />
        </RelativeLayout>


    </LinearLayout>




    <LinearLayout
            android:id="@+id/myContentsLL"
        android:padding="10dp"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical|right"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/readcountTV"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9dp"
                android:textColor="#333333"
                android:gravity="end"
                android:text="5 / 6"
                />

            <TextView
                android:id="@+id/createTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:textColor="#333333"
                android:gravity="end"
                android:text="08/29 2:35 PM"
                />

        </LinearLayout>



        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contentsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="16dp"
                android:textColor="#ffff"
                android:background="@drawable/background_border_strock4_a24dc6"
                android:text="this is so dope. love messaging concepts!."
                />
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            android:id="@+id/myVoiceLL"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.6dp"
            android:background="@mipmap/player_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

        <ImageView
                android:id="@+id/myVoiceIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/player_play_btn"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textSize="6dp"
                android:textColor="#333333"
                android:text="00:00"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textSize="6dp"
                android:textColor="#333333"
                android:text="00:00"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="5.5dp"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="#e2e2e2">


        </LinearLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp">

            <ImageView
                    android:id="@+id/volummIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/volumm"/>

            <ImageView
                    android:id="@+id/volummGraphIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/volummIV"
                    android:layout_alignBottom="@+id/volummIV"
                    android:src="@mipmap/volumm_graph"/>

        </RelativeLayout>

    </LinearLayout>

    <ImageView
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:id="@+id/myImageIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_gravity="end"/>
    <LinearLayout
        android:id="@+id/timeLL"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical|right"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/timerTV"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:gravity="end"
            android:text=""
            />

        <TextView
            android:id="@+id/cancelTV"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="8dp"
            android:background="@drawable/background_border_strock10_e0e0e0"
            android:textColor="#333333"
            android:text="@string/cancel"
            />
    </LinearLayout>

</LinearLayout>