<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:paddingLeft="9.5dp"
            android:paddingRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/comm_arrow_left"
            android:id="@+id/backIV"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/lounge_center"/>

        <ImageView
            android:paddingLeft="50dp"
            android:id="@+id/timeIV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/lounge_right_timelime"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/menuLL"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:background="@drawable/background_border_strock10_ededed">

            <RelativeLayout
                android:id="@+id/storyRL"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lounge_menu_chat"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lounge_dot"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/matchRL"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lounge_menu_match"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="25dp"
                    android:paddingTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lounge_dot"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reciveRL"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lounge_menu_send"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="25dp"
                    android:paddingTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lounge_dot"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sendRL"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lounge_menu_rece"/>

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="25dp"
                    android:paddingTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lounge_dot"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/moreRL"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/moreIV"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/op_drop"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/clickLL"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:background="@drawable/background_border_strock10_ededed">

            <ImageView
                android:id="@+id/clickIV"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/lounge_menu_chat"/>

            <TextView
                android:id="@+id/clickTV"
                android:paddingLeft="13.5dp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="21dp"
                android:textColor="#333333"
                android:text="@string/talk"/>



            <ImageView
                android:id="@+id/clickmoreIV"
                android:paddingRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/op_drop"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/eventLL"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/event2LL"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14dp"
                android:background="@drawable/background_border_strock10_ededed">

                <TextView
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="21dp"
                    android:textColor="#333333"
                    android:text="모든 EVENT"/>

                <ImageView
                    android:id="@+id/more2IV"
                    android:paddingRight="15dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/op_drop"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/storyLL"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:background="@drawable/background_border_strock10_ededed">

                <ImageView
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/lounge_menu_chat"/>

                <TextView
                    android:paddingLeft="13.5dp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="21dp"
                    android:textColor="#333333"
                    android:text="@string/talk"/>

                <TextView
                    android:id="@+id/storyTV"
                    android:paddingRight="44.5dp"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#555555"
                    android:text="@string/everyday_happiness"
                    />

                <ImageView
                    android:id="@+id/storymoreIV"
                    android:paddingRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/op_drop"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/matchLL"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:background="@drawable/background_border_strock10_ededed">

                <ImageView
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/lounge_menu_match"/>

                <TextView
                    android:paddingLeft="13.5dp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="21dp"
                    android:textColor="#333333"
                    android:text="@string/match"/>

                <TextView
                    android:paddingRight="44.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#555555"
                    android:text="@string/moment_trust"/>

                <ImageView
                    android:id="@+id/matchmoreTV"
                    android:paddingRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/op_drop"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reciveLL"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:background="@drawable/background_border_strock10_ededed">

                <ImageView
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/lounge_menu_send"/>

                <TextView
                    android:paddingLeft="13.5dp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="21dp"
                    android:textColor="#333333"
                    android:text="@string/recive_crush"/>

                <TextView
                    android:paddingRight="44.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#555555"
                    android:text="@string/rediscovery"/>

                <ImageView
                    android:id="@+id/recivemoreIV"
                    android:paddingRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/op_drop"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sendLL"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:background="@drawable/background_border_strock10_ededed">

                <ImageView
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/lounge_menu_rece"/>

                <TextView
                    android:paddingLeft="13.5dp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="21dp"
                    android:textColor="#333333"
                    android:text="@string/send_crush"/>

                <TextView
                    android:paddingRight="44.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#555555"
                    android:text="@string/Opportunity_bond"/>

                <ImageView
                    android:id="@+id/sendmoreIV"
                    android:paddingRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/op_drop"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_border_strock10_ededed"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lounge_search"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"/>

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/search"
                android:background="@null"
                android:textColorHint="#bbbbbb"
                android:paddingLeft="40dp"
                android:gravity="center_vertical"
                android:textSize="14dp"/>

        </RelativeLayout>




        <FrameLayout
            android:id="@+id/chattingFL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>


    </LinearLayout>

</LinearLayout>