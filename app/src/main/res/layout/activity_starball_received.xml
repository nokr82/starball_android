<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/wingStarIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wing_star"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/th14IV"
            android:alpha="0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/etc_star01"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/th15IV"
            android:alpha="0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/etc_star02"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/th16IV"
            android:alpha="0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/etc_star03"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/th01IV"
            android:alpha="1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cute_bi"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>