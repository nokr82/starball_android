<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">
    <com.devstories.starball_android.base.RationalRelativeLayout
            android:id="@+id/popup"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_border_strock8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:ratio="260:160">
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_marginTop="23dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#333333"
                    android:text="정말 종료하시겠습니까?"
                    />
            <TextView

                    android:layout_marginTop="16.5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#333333"
                    android:text="꿀팁 하나! 회원님의 기본정보를 모두 입력\n하시면 더 많은 짝과 연결되고 답장을 받으실\n수 있습니다."
                    />
            <LinearLayout
                    android:paddingTop="30dp"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/finishTV"
                       android:layout_marginRight="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#923b9f"
                        android:letterSpacing="-0.02"
                        android:text="나중에 하기"
                        />
                <TextView
                        android:id="@+id/continueTV"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#923b9f"
                        android:letterSpacing="-0.02"
                        android:text="좋아요, 계속할게요!"
                        />
            </LinearLayout>
        </LinearLayout>



    </com.devstories.starball_android.base.RationalRelativeLayout>
    
    

    
    
</LinearLayout>


